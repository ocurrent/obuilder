(rule
 (deps sandbox.macos.ml)
 (target sandbox.ml)
 (enabled_if (= %{system} macosx))
 (action (copy %{deps} %{target})))

(rule
 (deps sandbox.runc.ml)
 (target sandbox.ml)
 (enabled_if (<> %{system} macosx))
 (action (copy %{deps} %{target})))

